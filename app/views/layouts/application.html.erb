  <body>
    <div class="flex flex-col items-center bg-teal-500 p-10 w-screen h-screen">
      <nav class="w-full media-content has-text-centered">
        <span class="header title article-title">PlayNow</span>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
