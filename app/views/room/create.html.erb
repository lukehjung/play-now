<div class="mt-24">
  <span class="header font-semibold text-6xl tracking-tight"
    >Create a room</span
  >
</div>
<div class="mt-6">
  <%= form_with(local: true) do |f| %>
    <%= f.label "Name:" %>
    <%= f.text_field :name, required: true%>

    <%= f.submit "Make!", class: "bg-white text-gray-800 text-xl
    font-semibold p-1 w-40 text-center rounded-lg shadow mx-6" %>
  <% end %>
</div>
